<div class="container is-max-desktop p-6">

  <p id="notice"><%= notice %></p>

  <h1 class="title">Matches</h1>

  <%= link_to 'New Match', new_match_path, class: 'button is-success mb-4' %>

  <table class="table is-striped">
    <thead class="has-background-grey-lighter">
      <tr>
        <th>Local</th>
        <th>Visitor</th>
        <th>Result</th>
        <th>Start</th>
        <th>End</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.local %></td>
          <td><%= match.visitor %></td>
          <td><%= match.result %></td>
          <td><%= match.start %></td>
          <td><%= match.end %></td>
          <td><%= link_to 'Show', match, class: "button is-info" %></td>
          <td><%= link_to 'Edit', edit_match_path(match), class: "button is-warning" %></td>
          <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

